<h1><%= @wiki.title %></h1>
<hr />

<p>
  <%= markdown(@wiki.body) %>
</p>
<% if policy(@wiki).update? %>
  <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
  <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this post?"} %>
<% end %>
